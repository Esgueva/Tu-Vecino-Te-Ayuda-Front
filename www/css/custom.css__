@media(max-width:768px ){
    /* PROTOCOLOS */

    /* compras section */

    .client_section .row{
        padding: 25px 0;
    }
    
    .compras_section img, .compras_section a  {
    text-align: center;
    width: 50%;
    display:block;
    margin:auto;
    }
    /* end compras section */


    /* riesgo section */
    .riesgo_section img, .riesgo_section a {
    text-align: center;
    width: 50%;
    display:block;
    margin:auto;
    }
    /* end riesgo section */


    /* informacion section */
    .informacion_section img, .informacion_section a {
    text-align: center;
    width: 50%;
    display:block;
    margin:auto;
    }
    /* end informacion section */


    /* emocional section section */
    .emocional_section img,  .emocional_section a {
    text-align: center;
    width: 50%;
    display:block;
    margin:auto;  
    }
    /* end emocional section */

    .smart{
    display:none;
    padding: 0px;
    }

    .common_style p{
    margin: 15px 0 25px 0;
    }
    .common_style img{
    width: 80%;
    }

    .client_img-box{
        display:none;
        padding-top: 0px;
    }

    .client_detail-box iframe{
        width: 100%;
    }
}